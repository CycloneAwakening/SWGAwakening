{
    "name": "swg-awakening-launcher",
    "productName": "SWG Awakening Launcher",
    "version": "1.3.0",
    "description": "This software package provides patching, config and launching functionality for the SWG client to connect to the Awakening game servers.",
    "type": "module",
    "main": "main.mjs",
    "scripts": {
        "start": "electron .",
        "deploy-win": "electron-builder --win --ia32 --x64 -p always",
        "build-win": "electron-builder --win --ia32 --x64 -p never",
        "build-linux": "electron-builder --linux --x64",
        "build-mac": "electron-builder --mac --x64"
    },
    "repository": "https://github.com/CycloneAwakening/SWGAwakening",
    "homepage": "https://swgawakening.com/portal",
    "keywords": [
        "swga",
        "awakening",
        "launcher",
        "installer",
        "swg",
        "star",
        "wars",
        "galaxies",
        "emulator",
        "emu",
        "swgemu"
    ],
    "author": "SWG Awakening",
    "license": "CC0-1.0",
    "devDependencies": {
        "electron": "^35.5.1",
        "electron-builder": "^26.0.12"
    },
    "dependencies": {
        "@electron/remote": "^2.1.2",
        "adm-zip": "^0.5.10",
        "discord-rpc": "^4.0.1",
        "electron-is-dev": "^3.0.1",
        "electron-log": "^5.4.1",
        "electron-updater": "^6.6.2",
        "follow-redirects": "^1.15.2",
        "proper-lockfile": "^4.1.2",
        "random-access-file": "^4.1.2",
        "request": "^2.88.2"
    },
    "build": {
        "appId": "com.swgawakening.launcher",
        "productName": "SWG Awakening Launcher",
        "win": {
            "requestedExecutionLevel": "highestAvailable",
            "target": [
                "nsis",
                "zip"
            ]
        },
        "nsis": {
            "perMachine": false,
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}